<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}CnamTech{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}
</head>
<body>
<div class="d-flex">
  <!-- Sidebar -->
  <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 250px; min-height: 100vh;">
    <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <span class="fs-4">CnamTech</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="#"
           class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% else %}text-white{% endif %}">
          Accueil
        </a>
      </li>
      <li>
        <a href="#" class="nav-link text-white">
          Centre de support
        </a>
      </li>
      <li>
        <a href="#" class="nav-link text-white">
          Gestion de parc
        </a>
      </li>
      <li>
        <a href="{{ path('admin') }}" class="nav-link text-white">
          Tableau de bord
        </a>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
      <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
         data-bs-toggle="dropdown">
        {% if app.user %}
          <strong>{{ app.user.email }}</strong>
        {% else %}
          <strong>Non connecté</strong>
        {% endif %}
      </a>
      <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
        {% if app.user %}
          <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
        {% else %}
          <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>
        {% endif %}
      </ul>
    </div>
  </div>

  <!-- Main content -->
  <div class="flex-grow-1 p-4 bg-light" style="min-height: 100vh;">
    {% block body %}{% endblock %}
  </div>
</div>

{% block javascripts %}
  {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
